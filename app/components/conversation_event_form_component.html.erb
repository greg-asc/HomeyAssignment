<%= form_tag project_conversation_events_path(@project), class: "my-8" do %>
  <div class="mb-4">
    <%= label_tag "event[body]", "Add a comment", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= text_area_tag "event[body]", @body,
          rows: 4,
          placeholder: "Type your comment here...",
          class: "w-full rounded-lg border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 shadow-sm p-3 resize-none" %>
  </div>

  <div class="flex justify-end">
    <div class="mb-4">
      <%= label_tag "event[new_status]", "New Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= select_tag "event[new_status]", options_for_select(valid_statuses_for_select), class: "mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
            %>
    </div>

    <%= submit_tag "Post Update", class: "inline-flex items-center px-4 py-2 bg-indigo-600 border border-transparent rounded-lg font-semibold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
